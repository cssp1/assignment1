    "ui_name": "Enemy01", "analytics_tag": "tutorial01",
    "ui_priority": 999, // always appear at the top, for the tutorial
    "portrait": "ai_aruj_icon",
    "base_richness": 0.1,
    "resources": { "player_level": 1, "water": 2000, "iron": 2000 },
    "activation": { "predicate": "NOT", "subpredicates": [{"predicate": "TUTORIAL_COMPLETE"}] },
    "base_source_file": "$GAME_ID/$GAME_ID_ai_bases_tutorial01/$GAME_ID_ai_tutorial01_1002_base.json",
