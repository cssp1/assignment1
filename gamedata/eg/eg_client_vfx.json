        { "type": "explosion", "sprite": "fx/glow_static", "delay": 0.5, "duration": 1.8, "fade": 1, "composite_mode": "lighter", "opacity": 0.66, "sprite_scale": [20,10], "offset":[0,0,0],
          "motion": "grow_then_shrink", "rotate_speed": 220 },

